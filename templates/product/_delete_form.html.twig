<form method="post" action="{{ path('product_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn btn-primary active" onclick="return confirm('Etes vous sur de vouloir supprimer ce produit ?');" style="margin-top:1em">Delete</button>
</form>
